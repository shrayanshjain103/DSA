package com.shrayansh;

import java.util.Scanner;

public class battingaverage {
    public static void main(String[] args) {
        Scanner in=new Scanner(System.in);
        System.out.println("Enter the scored runs: ");
        int runs=in.nextInt();
        System.out.println("Enter the total played matches: ");
        int match1=in.nextInt();
        System.out.println("Enter the not out matches: ");
        int match2=in.nextInt();
        int dismiss=match1-match2;
        float average=(float) (runs/dismiss);
        System.out.println("The average is: "+average);


    }
}
