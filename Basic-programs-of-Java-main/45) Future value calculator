package com.shrayansh;

import java.util.Scanner;

public class futurevalue {
    public static void main(String[] args) {
        Scanner in=new Scanner(System.in);
        System.out.print("Enter the present value: ");
        float pv=in.nextFloat();
        System.out.print("Enter the yearly rate of Interest: ");
        float i=in.nextFloat();
        System.out.print("enter the time in year: ");
        float n=in.nextFloat();
        float fv=(float)(pv*Math.pow(1+i,n));
        System.out.print("The future value is: "+fv);
    }
}
