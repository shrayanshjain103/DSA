*********



class Solution {

void printTriangle(int n) {

        for(int i=1;i<=n*2;i++){

            if(i%2==1){

              for (int j = ((n*2)-i)/2; j>0; j--) {

                  System.out.print(" ");

              }

              for(int k=0;k<i;k++){

                System.out.print("*");

              }

              System.out.println();

          }

        }
    }
